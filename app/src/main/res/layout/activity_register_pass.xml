<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterPassActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_register_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        tools:ignore="MissingConstraints"
        android:onClick="back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/tv_login_verification"
            style="@style/my_text_black_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="请输入密码"
            android:textColor="@color/selector_tv_login" />



            <EditText
                android:id="@+id/et_register_pass_"
                style="@style/my_editText_style"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/et_register_pass_again"
                style="@style/my_editText_style"
                android:layout_width="0dp"
                android:layout_height="47dp"
                android:layout_weight="1"
                android:hint="请再一次输入密码"
                android:inputType="textPassword"
                android:paddingStart="20dp"

                />

        </LinearLayout>

        <Button
            android:id="@+id/register_pass_bt"
            style="@style/my_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="完成" />
    </LinearLayout>

</LinearLayout>