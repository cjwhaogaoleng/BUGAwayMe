<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mineClick"
            type="android.view.View.OnClickListener" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".mainFragment.MineFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="30dp"
            tools:context=".mainFragment.MineFragment">

            <LinearLayout
                android:layout_width="345dp"
                android:layout_height="143dp"
                android:layout_margin="15dp"
                android:background="@drawable/background_normal_header_orange"
                android:orientation="vertical">

                <TextView
                    style="@style/my_text_black_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="31dp"
                    android:gravity="center_horizontal"
                    android:text="我的"
                    android:textColor="@color/white"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/light_grey"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="昵称： "
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="用户名： "
                            android:textColor="@color/white" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/iv_mine_write"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/write_white" />

                    <TextView
                        style="@style/my_text_white_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/text_underline"
                        android:text="编辑资粮"
                        android:textSize="@dimen/font_small" />

                </LinearLayout>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mine0"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="10dp"
                android:clipChildren="false" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="132dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_main_navigation_light_grey"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_mine1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="15dp" />


                </LinearLayout>

                <TextView
                    style="@style/my_text_white_style"
                    android:layout_width="93dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/background_main_mine_header_orange1"
                    android:stateListAnimator="@null"
                    android:text="卖家中心"

                    />


            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_main_navigation_light_grey"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_mine2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="15dp" />


                </LinearLayout>

                <TextView
                    style="@style/my_text_white_style"
                    android:layout_width="93dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/background_main_mine_header_orange2"
                    android:stateListAnimator="@null"
                    android:text="买家中心" />


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/background_main_navigation_light_grey"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_mine3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginBottom="15dp" />


                </LinearLayout>

                <TextView
                    style="@style/my_text_white_style"
                    android:layout_width="93dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/background_main_mine_header_orange3"
                    android:stateListAnimator="@null"
                    android:text="功能" />

            </FrameLayout>
        </LinearLayout>

    </ScrollView>
</layout>