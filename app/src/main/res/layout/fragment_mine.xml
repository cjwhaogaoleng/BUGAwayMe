<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".mainFragment.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp"
        tools:context=".mainFragment.MineFragment">

        <LinearLayout
            android:layout_width="345dp"
            android:layout_height="191dp"
            android:layout_margin="15dp"
            android:background="@drawable/background_main_mine_header_orange"
            android:orientation="vertical">

            <TextView
                style="@style/my_text_black_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="我的"
                android:textColor="@color/white"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.bugawayme.CircleImageView.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/light_grey" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:text="昵称： "
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="用户名： "
                        android:textColor="@color/white" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/write_white" />

                <TextView
                    style="@style/my_text_white_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/text_underline"
                    android:text="编辑资粮"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="132dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_main_navigation_light_grey"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_mine1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp" />


            </LinearLayout>

            <TextView
                style="@style/my_text_white_style"
                android:layout_width="93dp"
                android:layout_height="38dp"
                android:layout_marginStart="35dp"
                android:background="@drawable/background_main_mine_header_orange"
                android:stateListAnimator="@null"
                android:text="卖家中心"
                />


        </FrameLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_main_navigation_light_grey"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_mine2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp" />


            </LinearLayout>

            <TextView
                style="@style/my_text_white_style"
                android:layout_width="93dp"
                android:layout_height="38dp"
                android:layout_marginStart="35dp"
                android:background="@drawable/background_main_mine_header_orange"
                android:stateListAnimator="@null"
                android:text="买家中心"
                />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_main_navigation_light_grey"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_mine3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="15dp" />


            </LinearLayout>

            <TextView
                style="@style/my_text_white_style"
                android:layout_width="93dp"
                android:layout_height="38dp"
                android:layout_marginStart="35dp"
                android:background="@drawable/background_main_mine_header_orange"
                android:stateListAnimator="@null"
                android:text="功能"
                />

        </FrameLayout>
    </LinearLayout>

</ScrollView>