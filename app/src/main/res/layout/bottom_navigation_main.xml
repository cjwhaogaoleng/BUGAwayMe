<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/background_main_navigation_light_grey"
        android:elevation="10dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tab_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_home"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_main_menu_home" />

            <TextView
                android:id="@+id/tv_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/selector_tv_navi"
                android:text="首页"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_shopping"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_main_menu_shop" />

            <TextView
                android:id="@+id/tv_tab_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/selector_tv_navi"
                android:text="交易"

                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_three"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tab_three"
                style="@style/my_text_white_style"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_normal_header_orange"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:text="卖"
                android:textSize="@dimen/font_big" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_message"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_main_menu_message" />

            <TextView
                android:id="@+id/tv_tab_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/selector_tv_navi"
                android:text="消息"

                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tab_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_mine"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:scaleType="centerCrop"
                android:src="@drawable/selector_main_menu_mine" />

            <TextView
                android:id="@+id/tv_tab_five"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="@color/selector_tv_navi"
                android:text="我的"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
